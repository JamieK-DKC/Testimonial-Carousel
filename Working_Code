  <!-- Title displayed in browser tab -->
  <title>Testimonials Carousel</title>
  <!-- Import Lato font from Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
  <style>
    /* Reset default page margins and set base font */
    html, body {
      margin: 0;
      padding: 0;
      /* Allow page scrolling on mobile */
      overflow-x: hidden;
      font-family: 'Lato', sans-serif;
      color: #000;
    }
    /* Carousel container: centers content and hides overflow horizontally */
    .carousel {
      position: relative;
      overflow: hidden;
      width: 100%;
      max-width: 1000px;
      margin: auto;
    }
    /* Slides wrapper: flex layout for horizontal sliding and smooth transition */
    .slides {
      display: flex;
      transition: transform 0.5s ease-in-out;
      touch-action: pan-y;
    }
    /* Individual slide: takes full width, with padding and centered text */
    .slide {
      flex: 0 0 100%;
      box-sizing: border-box;
      padding: 20px;
      text-align: center;
    }
    /* Navigation buttons */
    .nav {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(255, 255, 255, 0.7);
      border: none;
      font-size: 2rem;
      padding: 0.5rem 1rem;
      cursor: pointer;
      z-index: 1;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s ease;
    }
    /* Show nav on hover for desktop */
    .carousel:hover .nav {
      opacity: 1;
      pointer-events: auto;
    }
    /* Position left/right */
    .nav.prev { left: 10px; }
    .nav.next { right: 10px; }

    /* Image styling */
    .testimonial-photo {
      width: 100%;
      max-width: 250px;
      height: auto;
      border-radius: 0%;
      object-fit: cover;
      margin: 0 auto 10px;
    }
    /* Text styling */
    .testimonial-text {
      font-style: italic;
